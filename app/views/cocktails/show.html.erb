<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @cocktail.banner_url  %>);">
  <div class="container text-center">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container">

  <div class="cards">
    <% @cocktail.doses.each do |dose| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= dose.image_url %>)">
        <%= dose.name %>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "are you sure you want to delete ?"},
         class: "destroy_ingredient" do %>
         <i class="fas fa-trash"></i>
        <% end %>
      </div>
    <% end %>
  </div>


  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :name %>
    <%= f.input :image_url %>
    <%= f.submit 'Add cocktail', class: "btn btn-success" %>
  <% end %>
</div>
